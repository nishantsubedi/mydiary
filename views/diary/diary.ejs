<%- include('../_layouts/header') %>

<h1> Stories </h1>
<a href='/diary/write' class="btn btn-primary"><span class="glyphicon glyphicon-pencil
    " aria-hidden="true"></span>&nbsp; Write a Story</a>
<br><br>
<table class="table table-striped sorting">
    <thead>
        <tr class="home">
            <th>Title</th>
            <th>Created</th>
            <th>Last Updated</th>
            <th>Edit</th>
            <th>Delete</th>
            
        </tr>
    </thead>
    <tbody>
        <% stories.forEach((story) => { %>
            <tr id="id_<%= story._id %>" class="">    
                <td><a href="/diary/story/<%= story._id %>" class="btn btn-link"><%= story.title %></a></td>
                <td><%= story.created %></td>
                <td><%= story.updated %></td>
                <td><a href="/diary/edit/<%= story._id %>"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> </a></td>
                <td><a class="confirmDeletion" href="/diary/delete/<%= story._id %>"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> </a></td>
            </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../_layouts/footer') %>