<%- include('../_layouts/header') %>

<h1> Stories </h1>
<a href='/diary/write?pageno=<%= pageno %>' class="btn btn-primary"><span class="glyphicon glyphicon-pencil
    " aria-hidden="true"></span>&nbsp; Write a Story</a>
<br><br>
<table class="table table-striped table-hover">
    <thead>
        <tr class="home">
            <th>Title</th>
            <th>Created</th>
            <th>Last Updated</th>
            <th>Edit</th>
            <th>Delete</th>
            
        </tr>
    </thead>
    <tbody>
        <% stories.forEach((story) => { %>
            <tr id="id_<%= story._id %>" class="">    
                <td>
                    <a href="/diary/story/<%= story._id %>?pageno=<%= pageno %>" class=""><%= story.title %></a>
                    
                </td>
                <td><%= story.created %></td>
                <td><%= story.updated %></td>
                <td><a href="/diary/edit/<%= story._id %>?pageno=<%= pageno %>"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> </a></td>
                <td><a class=""  onclick="deleteThis('<%= story._id %>')" data-toggle="modal" data-target="#deleteStoryModal"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> </a></td>
            </tr>
        <% }); %>
    </tbody>
</table>
   
   
    <% for(var i = 0; i < noOfPages; i++){ %>
        <% if(i+1 == pageno){ %>
            <span><%- i+1 %></span>&nbsp;
        <% } else{ %>
        <a href="/diary/page/<%= i+1 %>"><%- i+1 %></a>&nbsp;
        <% } %>
    <% } %>

  

<!-- Modal -->
<div id="deleteStoryModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
  
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
         
          <h4 class="modal-title alert alert-danger">Confirm Deletion</h4>
        </div>
        <div class="modal-body">
          <p>Story once deleted cannot be recovered</p>
        </div>
        <div class="modal-footer">
           
            <a type="button" id="confirmDeleteBtn" href="#" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span>&nbsp; Delete</a>
            <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
        </div>
      </div>
  
    </div>
  </div>
<%- include('../_layouts/footer') %>